<div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <h1>Join our quiz</h1>
    <div class="mb-3">
        <input @bind="clientQuizId" class="form-control" placeholder="Enter the quiz id" />
    </div>
    <button class="btn btn-primary" @onclick="@(e=> OnQuizIdSubmit.InvokeAsync(clientQuizId))">Next</button>
</div>

@code {
    private string clientQuizId;

    [Parameter]

    public EventCallback<string> OnQuizIdSubmit { get; set; }


}
