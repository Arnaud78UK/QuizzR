<div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <h1 class="h1 text-center">@Question</h1>
    <div class="flex-fill quiz-button-container align-items-center">
        @for(var i =0; i< PossibleAnswers.Length;i++)
        {
            var answer = PossibleAnswers[i];
            <button class="btn btn-client-quiz btn-quiz-@i" @onclick="@( e=> OnAnswerSubmit.InvokeAsync(answer) )" value="@answer" ></button>
        }
    </div>  
</div>


@code {

    [Parameter]
    public string Question { get; set; }

    [Parameter]
    public string[] PossibleAnswers { get; set; }


    [Parameter]
    public EventCallback<string> OnAnswerSubmit { get; set; }
}
